#!/bin/sh

case $BLOCK_BUTTON in
	1) setsid kitty -1 -e pulsemixer & ;;
	2) pulsemixer --toggle-mute ;;
	4) pulsemixer --change-volume +1 ;;
	5) pulsemixer --change-volume -1 ;;
	3) pgrep -x dunst >/dev/null && notify-send -a "Volume" "Instructions" "ğŸ”Š Shows volume level.<br>ğŸ”‡ Muted.<br>ğŸ“¢ Left click to open pulsemixer.<br>ğŸ–±ï¸ Middle click to mute.<br>ğŸ§» Scroll to change volume level."
esac

[ "$(pulsemixer --get-mute)" = "1" ] && printf "%s %s%%\\n" "ğŸ”‡" "0" && exit

vol=$(pulsemixer --get-volume | awk '{print $1}')

if [ "$vol" -gt "70" ]; then
	icon="ğŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ğŸ”ˆ"
else
	icon="ğŸ”‰"
fi

printf "%s %s%%\\n" "$icon" "$vol"
