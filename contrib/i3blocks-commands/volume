#!/bin/sh

case $BLOCK_BUTTON in
	1) setsid kitty -1 -e pulsemixer & ;;
	2) pulsemixer --toggle-mute ;;
	4) pulsemixer --change-volume +1 ;;
	5) pulsemixer --change-volume -1 ;;
	3) pgrep -x dunst >/dev/null && notify-send "<b>ğŸ“¢ Volume module:</b>
- Shows volume ğŸ”Š, ğŸ”‡ if muted.
- Left click to open pulsemixer.
- Middle click to mute.
- Scroll to change."
esac

[ "$(pulsemixer --get-mute)" = "1" ] && printf "%s %s%%\\n" "ğŸ”‡" "0" && exit

vol=$(pulsemixer --get-volume | awk '{print $1}')

if [ "$vol" -gt "70" ]; then
	icon="ğŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ğŸ”ˆ"
else
	icon="ğŸ”‰"
fi

printf "%s %s%%\\n" "$icon" "$vol"
