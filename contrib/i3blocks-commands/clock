#!/bin/sh

date '+%Y %b %d (%a) %I:%M%p'

case $BLOCK_BUTTON in
  1) emacsclient -n -c --eval "(org-agenda-list)" >/dev/null;;
	2) pgrep -x dunst >/dev/null && $HOME/.conforg/contrib/i3blocks-commands/daily_agenda.el 2>&1 | awk NF | sed -e 's/^"//' -e 's/"$//' | xargs -I {} notify-send "{}" ;;
	3) pgrep -x dunst >/dev/null && notify-send "<b>ðŸ“… Time/date module:</b>
- Left click to show upcoming appointments for today
- Middle click opens org-agenda" ;;
esac
